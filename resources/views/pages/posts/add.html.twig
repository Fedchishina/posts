{% extends "layouts/main.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Добавление поста</div>
                    <div class="panel-body">
                        <form method="POST" action="/posts/add" class="form-horizontal">
                            <div class="form-group">
                                <label for="category-list" class="col-md-4 control-label">Категория поста</label>
                                <div class="col-md-6">
                                    <select class="selectpicker form-control" id="category-list" name="category_id" required>
                                        <option value="" selected disabled="disabled">выберите категорию поста</option>
                                        {% for category in categories %}
                                            <option value="{{ category.id }}">{{ category.name }}</option>
                                        {% endfor %}
                                    </select>
                                    {% if errors['name'] is not empty %}
                                        <span class="help-block">
                                            <strong>{{ errors['name'][0] }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="name" class="col-md-4 control-label">Название поста</label>
                                <div class="col-md-6">
                                    <input id="name" type="text" name="name" value="{% if inputs['name'] is not empty %} {{ inputs['name'] }}{% endif %}" class="form-control" required>
                                    {% if errors['name'] is not empty %}
                                        <span class="help-block">
                                            <strong>{{ errors['name'][0] }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="description" class="col-md-4 control-label">Краткое описание</label>
                                <div class="col-md-6">
                                    <textarea id="description" name="description" class="form-control" required></textarea>
                                    {% if errors['description'] is not empty %}
                                        <span class="help-block">
                                            <strong>{{ errors['description'][0] }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="content" class="col-md-12">Контент поста:</label>
                                <div class="col-md-12">
                                    <textarea id="content" name="content" class="ckeditor form-control" required></textarea>
                                    {% if errors['content'] is not empty %}
                                        <span class="help-block">
                                            <strong>{{ errors['content'][0] }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="btn-centered">
                                    <button type="submit" class="btn btn-primary btn-centered">Создать пост</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}