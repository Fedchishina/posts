<div class="col-md-12">
    <div class="row">
        {% for post in posts %}
        <div class="col-md-6">
            <div class="jumbotron">
                <h2>{{ post.name }}</h2>
                <p>{{ post.description }}</p>
                <p>category_id =  {{ post.category_id }}</p>
                <p>
                    <a class="btn btn-primary btn-large" href="#">
                        <span><i class="fa fa-heart-o"></i> нравится 1</span>
                    </a>
                    <a class="btn btn-primary btn-large" href="/posts/show?post_id={{ post.id }}">
                        <span><i class="fa fa-eye"></i> подробнее</span>
                    </a>
                </p>
            </div>
        </div>
        {% endfor %}
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {% for i in pages %}
                <li {% if _get.page == i %} class="btn disabled" {% endif %}>
                    <a href="/?page={{ i }}{% if _get.category_id is not empty %}&category_id={{_get.category_id}}{% endif %}">
                        {{ i }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
</div>