{% extends "layouts/main.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        {% if getParams.message is not empty %}
                        <div class="alert alert-success">
                            {{ getParams.message }}
                        </div>
                        {% endif  %}
                        <div class="form-group">
                            <form action="/" method="get">
                                <label for="category-list">Фильтр по категории</label>
                                <select class="selectpicker" id="category-list" name="category_id" required>
                                    {% for category in categories %}
                                        <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endfor %}
                                </select>
                                <input type="submit" class="btn btn-primary btn-large" value="поиск">
                            </form>
                        </div>
                        {% if session.auth %}
                        <div class="form-group">
                            <a class="btn btn-primary btn-large" href="/posts/add">Добавить новый пост</a>
                        </div>
                        {% endif %}

                    </div>
                    {% include "blocks/news.html.twig" %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}